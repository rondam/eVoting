
<?php
setlocale(LC_ALL, 'es_ES.UTF8');
$row = 1;
if (($handle = fopen("persona.csv", "r")) !== FALSE) {
    while (($data = fgetcsv($handle, 100, ",")) !== FALSE) {
        $num = count($data);
        echo "<p> $num fields in line $row: <br /></p>\n";
        $row++;
        for ($c=0; $c < $num; $c++) {
            echo $data[$c] . "<br />\n";
        }
    }
    fclose($handle);
}
?>
